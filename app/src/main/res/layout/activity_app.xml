<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.advantech.simpale.AppManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apk_filepath"/>

        <Button
            android:id="@+id/install_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Install from above apk path"
            android:background="@color/Blue900"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/app_pkg"/>

        <Button
            android:id="@+id/uninstall_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blue900"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Uninstall the above package app"/>

        <Button
            android:id="@+id/launch_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blue900"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Launch the above package app"/>

        <Button
            android:id="@+id/forcestop_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blue900"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Force stop the above package app"/>

        <Button
            android:id="@+id/disable_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/Blue900"
            android:textStyle="bold"
            android:text="Disable the above package app"/>

        <Button
            android:id="@+id/enable_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/Blue900"
            android:textStyle="bold"
            android:text="Enable the above package app"/>
    </LinearLayout>


    <TextView
        android:layout_weight="0"
        android:id="@+id/app_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:gravity="center"/>
</LinearLayout>